<style>
    /* Oculta la barra de desplazamiento en navegadores que soportan ::-webkit-scrollbar */
    .scrollbar-hide::-webkit-scrollbar {
        display: none;
    }
    /* Oculta la barra de desplazamiento para Firefox */
    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
    .carousel{
		view-timeline-name: --image;
		view-timeline-axis: block;
		animation-timeline: --image;
		animation-name: showCarousel;
    }
	@keyframes showCarousel {
		0% {
			opacity: 0;
            transform: translateX(-50%);
		}
		40% {
			opacity: 1;
            transform: translateX(0);
		}
	}
</style>
<script>
    function setupCarousel(carouselId) {
        const carousel = document.getElementById(carouselId);

        let isDown = false;
        let startX;
        let scrollLeft;

        // Configuración del desplazamiento automático
        let autoScroll;
        function startAutoScroll() {
            clearInterval(autoScroll); // Limpiar el intervalo previo para evitar duplicados
            autoScroll = setInterval(() => {
                const maxScrollLeft = carousel.scrollWidth / 2; // Usamos la mitad porque hemos duplicado el contenido
                // Ajusta la velocidad del desplazamiento
                carousel.scrollLeft += 2;

                // Verificamos si hemos llegado al final del contenido duplicado
                if (carousel.scrollLeft >= maxScrollLeft) {
                    // Volvemos suavemente al inicio
                    carousel.scrollLeft = 0;
                }
            }, 20); // Ajusta el tiempo para controlar la velocidad de desplazamiento
        }

        // Manejo del arrastre manual
        carousel.addEventListener("mousedown", (e) => {
            clearInterval(autoScroll); // Detiene el desplazamiento automático al arrastrar
            isDown = true;
            startX = e.pageX - carousel.offsetLeft;
            scrollLeft = carousel.scrollLeft;
        });

        carousel.addEventListener("mouseleave", () => {
            isDown = false;
            startAutoScroll(); // Reinicia el desplazamiento automático al soltar el mouse
        });

        carousel.addEventListener("mouseup", () => {
            isDown = false;
            startAutoScroll(); // Reinicia el desplazamiento automático al soltar el mouse
        });

        carousel.addEventListener("mousemove", (e) => {
            if (!isDown) return;
            e.preventDefault();
            const x = e.pageX - carousel.offsetLeft;
            const walk = (x - startX) * 2;
            carousel.scrollLeft = scrollLeft - walk;
        });

        // Soporte para dispositivos táctiles
        carousel.addEventListener("touchstart", (e) => {
            clearInterval(autoScroll); // Detiene el desplazamiento automático al tocar
            isDown = true;
            startX = e.touches[0].pageX - carousel.offsetLeft;
            scrollLeft = carousel.scrollLeft;
        });

        carousel.addEventListener("touchend", () => {
            isDown = false;
            startAutoScroll(); // Reinicia el desplazamiento automático al soltar el toque
        });

        carousel.addEventListener("touchmove", (e) => {
            if (!isDown) return;
            const x = e.touches[0].pageX - carousel.offsetLeft;
            const walk = (x - startX) * 2;
            carousel.scrollLeft = scrollLeft - walk;
        });

        // Detiene el desplazamiento automático al pasar el mouse por encima
        carousel.addEventListener("mouseenter", () => {
            clearInterval(autoScroll);
        });

        // Reinicia el desplazamiento automático al quitar el mouse
        carousel.addEventListener("mouseleave", () => {
            startAutoScroll();
        });

        // Inicia el desplazamiento automático cuando la página carga
        startAutoScroll();
    }

    // Inicializa los carruseles por separado
    setupCarousel("carousel1");
    setupCarousel("carousel2");
</script>
